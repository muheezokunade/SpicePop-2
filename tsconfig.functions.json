{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "netlify/functions",
    "rootDir": "netlify/functions",
    "moduleResolution": "node"
  },
  "include": ["netlify/functions/**/*.ts"],
  "exclude": ["node_modules"]
} 