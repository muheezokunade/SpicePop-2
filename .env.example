# Database connection string (required)
DATABASE_URL=postgres://username:password@hostname:port/database

# Node environment - set to 'production' for Vercel
NODE_ENV=production

# CORS settings (optional, adjust as needed)
CORS_ORIGIN=https://your-domain.com

# Session secret (required for production)
SESSION_SECRET=your-strong-session-secret-here

# Optional: Payment gateway credentials (if needed)
PAYSTACK_SECRET_KEY=your-paystack-secret-key-here
PAYSTACK_PUBLIC_KEY=your-paystack-public-key-here